{
  "kind": "collectionType",
  "collectionName": "doctors",
  "info": {
    "singularName": "doctor",
    "pluralName": "doctors",
    "displayName": "Doctor",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "experience": {
      "type": "integer",
      "required": true
    },
    "rating": {
      "type": "integer",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "doctor"
    },
    "appointment": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appointment.appointment",
      "mappedBy": "doctorId"
    },
    "speciality": {
      "type": "enumeration",
      "enum": [
        "Терапия",
        "Кардиология",
        "Стоматология",
        "Груминг",
        "Хирургия",
        "Офтольмология",
        "Травмотология",
        "Онкология"
      ],
      "required": true,
      "default": "Терапия"
    },
    "receptionDay": {
      "displayName": "receptionHours",
      "type": "component",
      "repeatable": true,
      "component": "reception.reception-hours",
      "private": true
    },
    "reception": {
      "type": "json"
    }
  }
}
